        <activity
            android:name=".ui.medication.MedicationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.food.FoodActivity"
            android:exported="false" />
        <activity
            android:name=".ui.enclosure.repair.RepairActivity"
            android:exported="false" />
        <activity
            android:name=".ui.enclosure.EnclosureActivity"
            android:exported="false" />
        <activity
            android:name=".ui.animal.AnimalActivity"
            android:exported="false" />
